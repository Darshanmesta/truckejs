<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://bootswatch.com/3/paper/bootstrap.min.css">
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
          <a href="/" class="navbar-brand">Home</a>
          <button class="navbar-toggle" data-toggle="collapse" data-target="#myDiv">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
      </div>

      <div class="navbar-collapse collapse" id="myDiv">
          <ul class="nav navbar-nav">
              <li><a href="/create">Create</a></li>
              <li><a href="/">Products</a></li>
          </ul>
      </div>
  </div>

  </nav>

  <div class="container">
      <div class="row">
          <div class="col-xs-12">
              <h2 class="jumbotron text-center">Welcome to updation Page</h2>
          </div>
      </div>
  </div>

  <div class="container">
      <div class="row">
          <% for(var i=0;i<post.length;i++) { %>
        
          <div class="col-md-6 col-md-offset-3 well">
              <form action="/update/<%=post[i].name %>" method="POST">
                <div class="form-group">
                    <label for="">Username</label>
                    <input type="text" required name="name" placeholder="Enter username" autofocus class="form-control" value="<%=post[i].name %>">

                </div>

                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" required name="password" placeholder="Password" class="form-control" value="<%=post[i].password %>">
                </div>

                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" required name="email" class="form-control" placeholder="someone@example.com" value="<%=post[i].email %>">
                </div>

                <div class="form-group">
                    <label for="">Description</label>
                    <br>
                    <textarea name="desc"  cols="30" rows="10"  required class='form-control' maxlength="1000"><%=post[i].desc %></textarea>
                </div>


                <div class="form-group">
                    <button class="btn btn-md btn-success" type="submit">Submit</button>
                    <button type="reset" class="btn btn-md btn-danger pull-right">Reset</button>
                </div>
                
            
            
            
            
            </form>
            
          </div>
         
          <% } %>
      </div>
  </div>
    
</body>
</html>